bold = 'RalewayBold', sans-serif

body
	font-family 'RalewayRegular', sans-serif
	font-size 16px
	min-width 320px
	color #437516
	background-image url('../img/bg.jpg')
	background-size cover
	background-attachment fixed

// Common Classes

.p0
	padding 0

.m0
	margin 0
	
.mauto
	margin 0 auto

// Buttons

.btn-menu
	height 40px
	width 40px
	background-color #79B444
	border-radius 25%
	margin 40px 15px
	color #fff
	
	i
		position absolute
		top 12px
		left 10px

.btn-custom
	display inline-block
	background-color #e84545
	border none
	color #fff
	text-transform uppercase
	padding 10px 100px
	
	&:hover
	&:focus
		color #fff
		text-decoration none

.btn-social
	display inline-block
	background-color transparent
	width 30px
	height 30px
	border 1px solid #fff
	color #fff
	line-height 30px

	&:hover
	&:focus
		color inherit
		text-decoration none

// Header

header
	height 680px

nav
	height 110px
	line-height 110px
	position absolute
	top 0
	left 0
	width 100%
	z-index 1

.main-menu
	
	li
		display inline-block
		padding 0 30px
		
		a
			color #79B444
			font-family bold
			text-transform uppercase
		
			&:hover
			&:focus
				color #437516
				text-decoration none

.top-line
	height 1px
	background-color #79B444
	
.title-block
	margin-top 225px

	h1
		font-family bold
		font-size 50px
		text-transform uppercase
		margin-bottom 50px
		
	p
		font-size 18px
		margin-bottom 50px
	
	span
		display block

// Mission Section

.mission
	padding 60px 0
	background #f4f4f4 url('../img/logo_2.png') 50% 0

.mission .mission-block
	display flex
	align-items center

	&:first-child
		margin-bottom 30px

.mission .mission-block .mission-text

	span
		font-family bold
		
	ul
		list-style-type circle

		li
			font-family bold

.mission .mission-block .mission-image
	margin auto

// Advantages Section

.advantages
	padding 100px 0
	
.advantages .advantages-item
	margin-bottom 50px

	i
		color #e84545
	
	h3
		font-family bold
		font-size 18px
		text-transform uppercase
		
// Menu Section

.menu .menu-item
	position relative

	&:hover .image-wrap
		opacity 1

.menu .menu-item .image-wrap
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color rgba(232,69,69,.7)
	display flex
	opacity 0

.menu .menu-item .image-wrap .menu-description
	color #fff
	margin auto
	
	h4
		text-transform uppercase

// Cooperation & Blog Common Styles

.cooperation .title
.blog .title

	h5
		font-size 24px
		font-family bold
		text-align center
		
	p
		margin-bottom 25px

.cooperation .cooperation-items
.blog .blog-items

	a
		width 100%
		display inline-block
		color #fff
		height 105px
		margin-bottom 10px
		
		&:hover
		&:focus
			text-decoration none

.cooperation .cooperation-items .text1-wrap
.blog .blog-items .text1-wrap
	font-family bold
	height 100%
	font-size 24px
	display flex
	align-items center
	justify-content center
	box-shadow 0 0 0 100px rgba(0,0,0,.33) inset
	padding 0 15px
	transition box-shadow .3s ease-out .2s, color .3s linear .2s
	text-shadow 4px 4px 2px rgba(150,150,150,1)

	&:hover
		box-shadow none
		color #531055

	span
		color #e84545

.cooperation .cooperation-items .text2-wrap
.blog .blog-items .text2-wrap
	display none
	border-left 1px solid #9d9fb2
	border-bottom 1px solid #9d9fb2
	border-right 1px solid #9d9fb2
	margin-left 2%
	color #437516
	overflow auto
	
.cooperation .cooperation-items .text2-wrap .text2
.blog .blog-items .text2-wrap .text2
	padding 25px 25px
	
	p
		text-indent 3%

	> ul > li > span
		display block
		font-family bold
		font-size 18px
		margin-bottom 10px

		> p
			text-indent 3%
			
	> ul > li > ul > li > span
		display block
		font-family bold
		margin-bottom 10px

//.closed
//	display none

// Cooperation Section

.cooperation
	padding 100px 0 50px 0

.cooperation .cooperation-items .text2-wrap .text2
	background-color #fff

.cooperation .cooperation-items .item-1 .text1-wrap
	background-image url('../img/cooperation-item-1.jpg')
	
.cooperation .cooperation-items .item-2 .text1-wrap
	background-image url('../img/cooperation-item-2.jpg')

.cooperation .cooperation-items .item-3 .text1-wrap
	background-image url('../img/cooperation-item-3.jpg')

.cooperation .cooperation-items .item-4 .text1-wrap
	background-image url('../img/cooperation-item-4.jpg')

// Partners Section

.partners
	padding 50px 0

.partners .title h3
	font-family bold
	font-size 18px
	text-transform uppercase
	margin-bottom 50px

.partners .partner

	h4
		color #437516
		font-family bold
		text-transform uppercase

// Blog Section

.blog
	padding 50px 0 100px 0

.blog .blog-items .text2-wrap .text2
	background-color #fff
	display flex
	align-items center

.blog .blog-items .text2-wrap .text2 span
	font-family bold
	
.blog .blog-items .text2 .raspberry
	color #DC143C

.blog .blog-items .text2 .orange
	color #EC7C26

.blog .blog-items .item-1 .text1-wrap
	background-image url('../img/blog-item-1.jpg')

.blog .blog-items .item-2 .text1-wrap
	background-image url('../img/blog-item-2.jpg')

// Footer

.main-footer
	padding 20px 0
	background-color #79B444

.main-footer .footer-item
	color #fff

	h5
		font-size 18px
		font-family bold
		text-transform uppercase
	
	p
		font-size 14px
	
	span
		display block

.copyright-block
	background-color #437516
	padding 15px 0

.copyright-block .copyright-text
	color #9d9fb2
	
	i
		color #e84545
		
// Scroll

#scrollup
	position fixed
	bottom 30px
	right 30px
	display none
	width 60px
	height 60px
	line-height 65px
	background-color #e84545
	color #fff
	cursor pointer
	opacity .5

	&:hover
		opacity 1